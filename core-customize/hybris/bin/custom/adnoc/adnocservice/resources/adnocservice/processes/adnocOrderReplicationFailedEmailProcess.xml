<process xmlns="http://www.hybris.de/xsd/processdefinition"
         start="adnocOrderReplicationFailedEmailAction" name="adnocOrderReplicationFailedEmailProcess"
         processClass="de.hybris.platform.orderprocessing.model.OrderProcessModel">

    <action id="adnocOrderReplicationFailedEmailAction" bean="adnocOrderReplicationFailedEmailAction">
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="sendEmail" bean="sendEmail">
        <transition name="OK" to="removeSentEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="removeSentEmail" bean="removeSentEmail">
        <transition name="OK" to="success"/>
        <transition name="NOK" to="error"/>
    </action>

    <end id="error" state="ERROR">Something went wrong.</end>
    <end id="failed" state="FAILED">Adnoc Return Order not placed.</end>
    <end id="success" state="SUCCEEDED">Adnoc Return Order placed.</end>

</process>